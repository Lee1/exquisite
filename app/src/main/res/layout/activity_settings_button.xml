<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logoButton"
        android:layout_alignParentStart="true">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#bdbdbd">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/plusButton"
                    android:background="@null"
                    android:src="@drawable/plus_icon"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:padding="5dp"
                    android:clickable="true"
                    android:onClick="plusButtonOnClick"
                    android:layout_gravity="left" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/logoButton"
                    android:background="@null"
                    android:src="@drawable/logo"
                    android:padding="5dp"
                    android:layout_alignBottom="@+id/settingsButton"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/settingsButton"
                    android:background="@null"
                    android:src="@drawable/settings_icon"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:padding="5dp"
                    android:clickable="true"
                    android:onClick="settingsButtonOnClick" />
            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Settings"
            android:id="@+id/Settings_Title"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:typeface="sans"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp">

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:id="@+id/switch1"
                android:layout_weight="1"
                android:checked="false"
                android:enabled="true"
                android:gravity="top"
                android:elegantTextHeight="false"
                android:switchPadding="200dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:switchMinWidth="50dp"
                android:thumbTextPadding="25dp"

                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="60dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Help"
                android:id="@+id/button"
                android:textSize="20dp"
                android:background="#ecebeb" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="50dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="About"
                android:id="@+id/button2"
                android:textSize="20dp"
                android:background="#ecebeb" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:src="@drawable/dropbox_button"
                android:layout_gravity="center_horizontal"
                android:background="@null" />
        </FrameLayout>

    </LinearLayout>


</RelativeLayout>